<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Chatting Website</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

    <style>
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: Arial, sans-serif;
        background-color: #e9eff3;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }

      .chat-container {
        width: 100%;
        max-width: 450px;
        height: 90vh;
        min-height: 600px;
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
        display: flex;
        flex-direction: column;
        overflow: hidden;
      }

      .chat-header {
        background-color: #3498db;
        color: #fff;
        padding: 20px;
        text-align: center;
        font-size: 1.6rem;
        font-weight: bold;
        display: flex;
        justify-content: space-between;

      }

      .chat-messages {
        flex: 1;
        padding: 15px;
        overflow-y: auto;
        background-color: #f4f6f9;
        display: flex;
        flex-direction: column;
      }

      .message {
        margin-bottom: 15px;
        display: flex;
      }

      .message.sent {
        justify-content: flex-end;
      }

      .message.received {
        justify-content: flex-start;
      }

      .message .content {
        max-width: 75%;
        padding: 12px 16px;
        border-radius: 12px;
        background-color: #3498db;
        color: #fff;
        font-size: 0.95rem;
        word-break: break-word;
      }

      .message.received .content {
        background-color: #ecf0f1;
        color: #2c3e50;
      }

      .message .time {
        font-size: 0.55rem;
        color: #c0c0c0;
        margin-top: 5px;
        text-align: right;
      }

      .chat-footer {
        display: flex;
        padding: 15px;
        background-color: #fff;
        border-top: 1px solid #dcdfe3;
      }

      .chat-footer input[type="text"] {
        flex: 1;
        padding: 10px 15px;
        border: 1px solid #ccc;
        border-radius: 25px;
        font-size: 1rem;
        outline: none;
      }

      .chat-footer button {
        background-color: #3498db;
        color: #fff;
        border: none;
        padding: 10px 20px;
        margin-left: 10px;
        border-radius: 25px;
        cursor: pointer;
        font-size: 1rem;
        transition: background-color 0.3s ease;
      }

      .chat-footer button:hover {
        background-color: #2980b9;
      }

      a {
        color: inherit; /* Inherit color from the parent element */
        text-decoration: none; /* Optional: Prevent underline */
      }

      /* Optionally add styles for specific states, if needed */
      a:hover,
      a:focus,
      a:active {
        color: inherit; /* Ensure color stays the same */
        text-decoration: none; /* Optional: Prevent underline on hover */
      }
    </style>
  </head>
  <body>
    <div class="chat-container">
      <!-- Chat Header -->

      <div class="chat-header">
        <span><a href="/friends"><i class="fa-solid fa-arrow-left"></i></a></span>
        <span>Live Chat</span>
        <span> </span>

      </div>

      <!-- Chat Messages -->
      <div class="chat-messages" id="chat-messages">
        <div class="message received">
          <div class="content">Hello! How can I assist you today?</div>
          <div class="time">09:45 AM</div>
        </div>
        <div class="message sent">
          <div class="content">
            <a href="#" target="_blank" rel="noopener noreferrer">https://text</a>
            <div class="time">09:47 AM</div>
          </div>
        </div>
      </div>

      <!-- Chat Footer -->
      <div class="chat-footer">
        <input type="text" id="message-input" placeholder="Type a message..." />
        <button id="send-button">Send</button>
      </div>
    </div>
    <script defer src="http://localhost:3002/socket.io/socket.io.js"></script>
    <script src="https://cdn.socket.io/4.7.1/socket.io.min.js"></script> 
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>

    <script src="js/index.js"></script>
  </body>
</html>
